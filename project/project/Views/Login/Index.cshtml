@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SaBoTech Login</title>
    <link rel="stylesheet" href="../assets/css/styles.min.css" />
    <style>
        /* ÉP MÀU XANH LÁ CỦA FRUITABLES VÀO TẤT CẢ CÁC THÀNH PHẦN */
        :root,
        [data-bs-theme=light] {
            /* Ghi đè màu chính */
            --bs-primary: #81c408 !important;
            --bs-primary-rgb: 129, 196, 8 !important;
            /* Ghi đè các màu liên quan khác (ví dụ: link, hover nhẹ) */
            --bs-link-color: #81c408 !important;
            --bs-link-hover-color: #6ea706 !important;
            --bs-light-primary: #f4fce3 !important; /* Background xanh lá nhạt */
        }

        /* Ghi đè các class quan trọng để đảm bảo */
        .btn-primary,
        .btn-primary:focus,
        .btn-primary:active {
            background-color: #81c408 !important;
            border-color: #81c408 !important;
            color: #fff !important;
        }

        /* Đảm bảo Sidebar Active (Selected) có màu xanh lá */
        .sidebar-nav ul .sidebar-item.selected > .sidebar-link,
        .sidebar-nav ul .sidebar-item > .sidebar-link.active {
            background-color: #81c408 !important;
            color: #fff !important;
        }

        /* Text và Checkbox */
        .text-primary {
            color: #81c408 !important;
        }

        .form-check-input:checked {
            background-color: #81c408 !important;
            border-color: #81c408 !important;
        }

        .form-control:focus {
            border-color: #81c408 !important;
            box-shadow: 0 0 0 0.25rem rgba(129, 196, 8, 0.25) !important;
        }
        /* CHỈ SỬA: Màu nền mờ khi di chuột vào Menu (Sidebar) */
        .sidebar-nav ul .sidebar-item .sidebar-link:hover,
        .sidebar-nav ul .sidebar-item .sidebar-link:focus {
            /* Đổi nền xanh biển nhạt thành xanh lá nhạt (Fruitables) */
            background-color: rgba(129, 196, 8, 0.1) !important;
            /* Đổi chữ thành màu xanh lá đậm cho đồng bộ */
            color: #81c408 !important;
        }
    </style>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body h-100">
                                <a asp-controller="Home" asp-action="Index" class="text-nowrap logo-img text-center d-block w-100">
                                    <img src="~/assets/images/logos/logo1.png" alt="" style="width: 40%;height: 40%;object-fit: cover;">
                                </a>
                                <p class="text-center">Your Social Campaigns</p>
                                <form>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Username</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                    </div>
                                    <div class="mb-4">
                                        <label for="exampleInputPassword1" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1">
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
                                            <label class="form-check-label text-dark" for="flexCheckChecked">
                                                Remeber this Device
                                            </label>
                                        </div>
                                        <a class="text-primary fw-bold" href="./index.html">Forgot Password ?</a>
                                    </div>
                                    <a href="./index.html" class="btn btn-primary w-100 py-8 fs-4 mb-4">Sign In</a>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">New to SeoDash?</p>
                                        <a class="text-primary fw-bold ms-2" asp-controller="Register" asp-action="Index">Create an account</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>